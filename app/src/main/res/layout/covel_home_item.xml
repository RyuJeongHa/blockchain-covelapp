<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp">


    <ImageView
        android:id="@+id/novel_cover"
        android:layout_width="60dp"
        android:layout_height="80dp"
        android:scaleType="fitXY"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/novel_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/novel_cover"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginLeft="5dp" />

    <TextView
        android:id="@+id/novelist_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/novel_name"
        android:includeFontPadding="false"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/novel_cover"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/novel_explain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/novel_cover"
        android:layout_toRightOf="@id/novel_cover"
        android:textSize="15dp"
        android:layout_marginLeft="5dp"/>

    </RelativeLayout>
